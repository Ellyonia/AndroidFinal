<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thing.memorytracker.SizeSelection"
    tools:ignore="MergeRootFrame" >
    
    <TextView
        android:id="@+id/applicationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/title"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/spinnerTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gameSizePicker"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lines="2"
        android:text="@string/spinner_title" />
    
    <Spinner
        android:id="@id/gameSizePicker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/spinnerTitle"
        android:layout_alignRight="@id/spinnerTitle"
        android:entries="@array/boardSizes"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"/>
        
    <Button 
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/gameSizePicker"
        android:layout_centerHorizontal="true"
        android:text="@string/start"
        android:layout_marginTop="100dp"/>
    
</RelativeLayout>

